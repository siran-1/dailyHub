<%-include('partials/header')-%>
    <body>
        <div class="app-bg app-mainTab__bottom_bg1"></div>
        <div class="app-bg app-mainTab__bottom_bg2"></div>
        <div class="app-bg app-mainTab__bottom_bg3"></div>
        <div class="app-bg app-mainTab__bottom_bg4"></div>
        <div class="app-mainTab__Tabs">
            <div class="row" id="dailyHub_login_header">
                <h2 class="text-white">DailyHub Login</h2>
            </div>
            <div class="row" id="dailyHub_login_body">
                <div class="card-body" id="dailyHub_login_formDiv">
                    <form action="/login" method="POST" style="margin-bottom: 0.5em;">
                        <div class="mb-3 mt-3">
                            <label for="dailyHub_login_email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="dailyHub_login_email" placeholder="Enter email"
                                name="dailyHub_login_email">
                        </div>
                        <div class="mb-3">
                            <label for="dailyHub_login_password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="dailyHub_login_password"
                                placeholder="Enter password" name="dailyHub_login_password">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="button-30" id="dailyHub_login_btn">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-body" id="dailyHub_new_signup_formDiv">
                    <form id="signupForm" style="margin-bottom: 0.5em;">
                        <div class="mb-3 mt-3">
                            <label for="dailyHub_new_username" class="form-label">Username:</label>
                            <input type="name" class="form-control" id="dailyHub_new_username"
                                placeholder="Enter username" name="dailyHub_new_username">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="dailyHub_new_email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="dailyHub_new_email" placeholder="Enter email"
                                name="dailyHub_new_email">
                        </div>
                        <div class="mb-3">
                            <label for="dailyHub_new_password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="dailyHub_new_password"
                                placeholder="Enter password" name="dailyHub_new_password">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="button-30" id="dailyHub_Newlogin_btn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row" id="social_login_div">
                <button class="button-30" id="dailyHub_NewUserBtn">New User? Click To Register.</button>
                <button class="button-30" id="dailyHub_SwitchtoLogin">Already have an account? Click To Login.</button>
            </div>
        </div>
    </body>
    <%-include('partials/footer')-%>